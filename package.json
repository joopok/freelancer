    "tone:check": "grep -r 'fail\\|error\\|invalid\\|wrong\\|bad\\|broken' src/components/ src/app/ --include='*.tsx' | grep -E '(className|aria-label|title|placeholder)' | grep -v '// TONE: OK' || echo '✅ No harsh language found'",
    "tone:errors": "grep -r 'Error\\|Failed\\||Invalid\\|wrong' src/components/ src/app/ --include='*.tsx' | grep -v '// OK:' || echo '✅ Error messages look supportive'",
    "tone:naming": "grep -r 'function handle\\|const handle\\|function get\\|const get' src/ --include='*.ts' --include='*.tsx' | grep -E '(handle|get|set|check)$' || echo '✅ Function names are descriptive'",
    "tone:validate": "npm run tone:check && npm run tone:errors && npm run tone:naming"
  },
