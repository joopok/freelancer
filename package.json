    "dev:7005": "next dev -p 7005",
    "dev:7005:api": "NEXT_PUBLIC_USE_MOCK_API=false next dev -p 7005",
    "dev:7005:mock": "NEXT_PUBLIC_USE_MOCK_API=true next dev -p 7005",
