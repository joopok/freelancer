# API 설정
NEXT_PUBLIC_API_URL=http://localhost:8080
NEXT_PUBLIC_USE_MOCK_API=false  # true: Mock 데이터 사용, false: 실제 API 사용
NEXT_PUBLIC_API_TIMEOUT=30000
NEXT_PUBLIC_API_CACHE_TIME=300000

# 앱 설정
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_AUTH_TOKEN_NAME=auth_token
NEXT_PUBLIC_AUTH_REFRESH_TOKEN_NAME=refresh_token
NEXT_PUBLIC_USE_API_CACHE=false

# 개발 환경 설정
NEXT_PUBLIC_DEBUG_MODE=false  # true: 디버그 정보 표시
NEXT_PUBLIC_SHOW_API_STATUS=false  # true: API 상태 표시